<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@drawable/backgroundfruitdt"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dt_ha"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="172dp"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/tv_dt_title"
        android:layout_width="201dp"
        android:layout_height="81dp"
        android:layout_marginLeft="20dp"
        android:textColor="#F31616"
        android:textStyle="bold"
        android:textSize="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_dt_des"
        android:layout_width="427dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#051723"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"
        tools:ignore="MissingConstraints" />
    <android.widget.Button
        android:id="@+id/btn_dt_update"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:background="@drawable/botron_button"
        android:backgroundTint="#24D311"
        android:layout_gravity="center"
        android:text="Update"/>


</LinearLayout>